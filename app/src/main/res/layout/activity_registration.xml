<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registration">
    <TextView
        android:id="@+id/registerTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:textSize="@dimen/large_size"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerTxt"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/l_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Name"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/l_father"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/father"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fathersName"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/l_castname"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/castname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/castname"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/l_mail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mail_id"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/l_mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mobile_no"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/l_Blood_group"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/Blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/blood_group"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/listliner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/text_layout"
                android:weightSum="1">

                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="@string/state"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/l_village"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/village"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/village"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/l_postal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/posta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/postcode"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/l_district"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/district"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#1010e6"
                android:text="@string/Submit"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="435dp">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:visibility="gone"></ListView>
    </RelativeLayout>

</RelativeLayout>