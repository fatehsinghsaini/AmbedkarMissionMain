<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="3300">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="13"
        android:useLevel="false">
        <size
            android:width="@dimen/_96sdp"
            android:height="@dimen/_96sdp" />

        <gradient
            android:centerColor="@color/colorSkyBlueDark"
            android:centerY="0.50"
            android:endColor="@color/colorSkyBlueDark"
            android:startColor="@color/trans"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>